{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://celest.local/schema/graphpatch-knowledge.json",
  "type": "object",
  "required": [
    "explanation",
    "patch"
  ],
  "properties": {
    "explanation": {
      "type": "string"
    },
    "patch": {
      "type": "object",
      "required": [
        "ops"
      ],
      "properties": {
        "ops": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object"
          }
        }
      },
      "additionalProperties": true
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "questions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false,
  "description": "Placeholder schema for Knowledge Tree until entities are implemented."
}